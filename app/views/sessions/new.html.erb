<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>

<h1>Log in</h1>
<%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
  <div class="form">
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
      <p>*Password must be at least 6 characters long.</p>
    </div>

    <div class="field">
        <%= f.submit "Log in" %>
    </div>
  </div>
<% end %>