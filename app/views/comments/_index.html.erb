<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li class="comment">
        <p><%= comment.content %></p><br>
        <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
        <p><%= link_to "✎", edit_picture_comment_path(picture, comment), remote: true %></p>
        <p><%= link_to "×", picture_comment_path(comment.picture_id, comment.id), method: :delete, remote: true,
                                        data: { confirm: "本当に削除しますか?"} %></p>
      </li>
    <% end %>
  <% end %>
</ul>