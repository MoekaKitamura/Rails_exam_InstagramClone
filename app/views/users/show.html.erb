<p id="notice"><%= notice %></p>

<h1>About</h1>
<div class="form">
  <div class="row">
    <div class="col-xs-6"><%= image_tag @user.image_name.url, class: "profile"%></div>
    <div class="col-xs-6 about">
      <p><strong>Name:</strong>
        <%= @user.name %>
      </p>
      <p><strong>Email:</strong>
      <%= @user.email %>
      </p>
      <p>
        <%= link_to 'Edit Profile', edit_user_path(@user) %> |
        <%= link_to 'Delete Your Account', @user, method: :delete, data: { confirm: 'Are you sure?' } %>
      </p>
    </div>
  </div>
</div>

<h1>Your Posts</h1>
<div class="container yourpost">
  <div class="row">
    <% current_user.pictures.order(created_at: :desc).each do |picture| %>
      <div class="col-xs-4">
        <%= link_to (image_tag picture.image.url), picture, class: "mypics"%>
      </div>
    <% end %> 
  </div>
</div>

